<h1>Categories</h1>

<ul>
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category_path(category.id) %>
      (<%= pluralize(category.articles.count, "article") %>)
    </li>
  <% end %>
</ul>

<%= will_paginate(@categories, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
