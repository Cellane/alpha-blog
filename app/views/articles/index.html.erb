<h1>All articles</h1>

<% @articles.each do |article| %>
  <div class="row">
    <div class="col-sm-10">
      <h2><%= link_to article.title, article_path(article.id) %></h2>
    </div>
    <div class="col-sm-2">
      <%= link_to "edit", edit_article_path(article.id), class: "btn btn-xs btn-primary" %>
      <%= link_to "delete", article_path(article.id), method: :delete,
                  data: {confirm: "Are you sure?"},
                  class: "btn btn-xs btn-danger"%>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= simple_format(truncate(article.description, length: 100)) %>
    </div>
  </div>
<% end %>
