<h1>All articles</h1>

<p><%= link_to "Create new article", new_article_path %></p>

<% @articles.each do |article| %>
  <h2>
    <%= link_to article.title, article_path(article) %>
    <small><%= link_to "edit", edit_article_path(article) %></small> |
    <small><%= link_to "delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></small>
  </h2>
  <p><%= article.description %></p>
<% end %>
